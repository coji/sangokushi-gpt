{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"build",
			"api-cache",
			"data",
			"public",
			".cache",
			"api",
			".vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["build", "./app/services/api-client.d.ts"]
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"indentStyle": "space"
		}
	}
}
